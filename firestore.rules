rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function validAuth() {
      return request.auth != null && request.auth.uid != null;
    }

    match /sessions/{session} {
      // TODO: Put restrictions on who can modify sessions.
      allow read: if true;
      allow create: if validAuth()
        && request.auth.uid == request.resource.data.hostId
        && request.resource.data.createdAt == request.time;

      match /rounds/{round} {
        // TODO: Put restrictions on who can modify rounds.
        allow read, write: if true;


        match /interactions/{interaction} {
          // TODO: Put restrictions on who can modify interactions.
          allow read, write: if true;
        }

        match /students/{student} {
          // TODO: Put restrictions on who can modify rounds' students.
          allow read, write: if true;
        }
      }

      match /students/{student} {
        // Checks if the user id is the same as the document id
        allow read, write: if request.auth.uid == student;
      }
    }
  }
}
